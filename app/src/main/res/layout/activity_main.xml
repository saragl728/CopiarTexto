<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="260dp"
        android:text="Mostrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editorTexto"
        android:layout_width="224dp"
        android:layout_height="115dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="89dp"
        android:ems="10"
        android:hint="Escriba el nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mostradorTexto"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="110dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMostrar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="67dp"
        android:text="Limpiar"
        app:layout_constraintBottom_toTopOf="@+id/mostradorTexto"
        app:layout_constraintStart_toEndOf="@+id/bMostrar" />

</androidx.constraintlayout.widget.ConstraintLayout>